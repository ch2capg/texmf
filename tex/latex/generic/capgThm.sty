% My proof enviroment
\makeatletter
\renewenvironment{proof}[1][\bfseries\sffamily\proofname]{\par
  \pushQED{\qed}%
  \normalfont \topsep6\p@\@plus6\p@\relax
  \trivlist
  \item[\hskip\labelsep
        \sffamily\bfseries
    #1\@addpunct{.}]\ignorespaces}{\popQED\endtrivlist\@endpefalse}
\makeatother
\renewcommand{\qedsymbol}{$\blacksquare$}
